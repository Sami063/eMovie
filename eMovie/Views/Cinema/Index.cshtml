@model IEnumerable<eMovie.Models.Cinema>

@{
    ViewData["Title"] = "Available Cinemas";
}

<p>List of Cinemas</p>

<div class="row">
    <div class="col-sm">
        <a asp-action="Create" class="btn btn-info form-control text-white">Create Cinema</a>
    </div>
    <div class="col-sm">
        <form asp-controller="Cinema" asp-action="Index">
            <span class="btn-group">
                <input class="form-control" type="text" name="searchCinema" placeholder="Search" />
                </span>
                <input class="p-1 ml-2 btn btn-sm btn-info" type="submit" value="Find" />
        </form>
    </div>
</div>
       
<!-- Search field for Cinemas-->


<div class="col-12 border p-0 mt-0">
    <form method="get">
        @if(Model.Count() > 0)
        {
            <table class="table table-striped border table-dark">
                <tr class="table-primary">
                    <th>
                        Name
                    </th>
                    <th>
                        Location
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Screen
                    </th>
                </tr>

                @foreach (var cinema in Model)
                {
                    <tr>
                        <td>
                            <a href="" class="map-link">
                                <img src="@Url.Content(@cinema.CinemaLogo)"/>
                            </a>
                            <a href="" class="cinema-name">
                                @Html.DisplayFor(c => cinema.Name)
                            </a>
                        </td>
                        <td>
                            Aarhus, Denmark
                        </td>
                        <td>
                            Open
                        </td>
                        <td>
                            3
                        </td>
                        <td>
                            <div class="btn btn-success btn-sm text-white">
                                @Html.ActionLink("Detail", "Detail", new { id = cinema.Id })
                            </div>
                        </td>
                        <td>
                            <div class="btn btn-danger btn-sm text-white">
                                @Html.ActionLink("Delete", "Delete", new { id = cinema.Id } )
                            </div>
                        </td>
                    </tr>
                }
            </table>
        } 
        else
        {
            <h1> No Cinemas found  </h1>
        }
    </form>
</div>


<style>
    img {
        border-radius: 2%;
        width: 50px;
        height: 50px;
    }
    .searchField {
        width: 200px;
    }
</style>

